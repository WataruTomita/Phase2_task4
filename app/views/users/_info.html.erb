<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= user.follower.count %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= user.followed.count %></th>
  </tr>
</table>

<div class='row'>
  <% if user.id == current_user.id %>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <% end %>
  <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', unfollow_path(user.id), class: 'btn btn-block btn-danger', method: :post %>
    <% else %>
      <%= link_to 'フォローする', follow_path(user.id), class: 'btn btn-block btn-success', method: :post %>
    <% end %>
  <% end %>
</div>